<!DOCTYPE html>
<html>
<body>
  <h3>Multiples of 7 Finder</h3>
  <label>Enter a number:</label>
  <input type="number" id="num" placeholder="Enter limit">
  <button onclick="findMultiples()">Show</button>
  <p id="result"></p>

  <script>
    function findMultiples() {
      let n = document.getElementById("num").value;
      let res = "";
      for (let i = 7; i <= n; i += 7) {
        res += i + " ";
      }
      document.getElementById("result").innerHTML = "Multiples of 7: " + res;
    }
  </script>
</body>
</html>
